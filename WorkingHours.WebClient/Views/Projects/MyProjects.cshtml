@model IEnumerable<WorkingHours.Shared.Dto.ProjectHeader>

@{
    ViewBag.Title = "My projects";
}

<h2>My projects</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th>Closed</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (item.Deadline.HasValue)
            {
                @item.Deadline.Value.ToLongDateString()
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsClosed)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default"})
            @Html.ActionLink("Get report", "Report", new { id = item.Id }, new {@class = "btn btn-primary"})
        </td>
    </tr>
}

</table>
